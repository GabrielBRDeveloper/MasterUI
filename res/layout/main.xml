<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    width="match_parent"
    height="match_parent"
    background="#383838"
    padding="20dp"
    orientation="vertical">
    <Button
        width="match_parent"
        height="wrap_content"
        text="Example Button"/>
    <include layout="text"/>
    <EditText
        width="256dp"
        height="wrap_content"
        textColor="#FFF"
        padding="20dp"/>
    <View width="10dp" height="10dp"/>
    <ImageView
        width="200dp"
        height="200dp"
        background="?colorPrimary"
        src="@drawable/panda"/>
    <View width="10dp" height="10dp"/>
    <Switch/>
</LinearLayout>