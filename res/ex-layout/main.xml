<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    width="match_parent"
    height="wrap_content"
    paddingBottom="8dp"
    background="#AAA">

  <LinearLayout
      width="match_parent"
      height="wrap_content"
      orientation="horizontal"
      padding="10dp"
      background="#555"
      gravity="center">

    <ImageView
        id="icon"
        width="64dp"
        height="64dp"
        padding="10dp"
        background="#F0F"/>

    <LinearLayout
        width="match_parent"
        height="wrap_content"
        paddingLeft="20dp"
        background="#F00">

      <TextView
          tag="title"
          width="match_parent"
          height="wrap_content"
          textSize="19dp"
          text="Title"/>

      <TextView
          tag="subtitle"
          width="match_parent"
          height="wrap_content"
          textSize="14dp"
          textStyle="bold"
          textColor="?colorPrimary"
          paddingTop="4dp"
          paddingBottom="3dp"
          text="Title"/>

      <TextView
          tag="desc"
          width="match_parent"
          height="wrap_content"
          textSize="13dp"
          alpha="0.5"
          paddingTop="4dp"
          paddingBottom="3dp"
          text="Title"/>
    </LinearLayout>

  </LinearLayout>

</LinearLayout>