<?xml version="1.0" encoding="UTF-8"?>
<style>
  <style name="Base.Theme">
    <item name="colorOnPrimary">#FFFFFF</item>
    <item name="colorPrimary">#1F9EDE</item>
    <item name="colorOnSurface">#FFF</item>
    <item name="colorOnSurfaceVariant">#FFFFFF</item>
    <item name="colorSurfaceVariant">#47444C</item>
    <item name="colorSurface">#1C1B1F</item>
    <item name="colorOutline">#5E5E5E</item>
    <item name="colorHint">#30FFFFFF</item>
    <item name="textSize">15dp</item>
  </style>

  <style name="Widget.ScrollView">
    <item name="scrollbar">@drawable/scrollbar_thumb</item>
  </style>

  <style name="Widget.MenuLayout">
    <style name="background">@drawable/menu_background</style>
  </style>

  <style name="Widget.EditText">
    <item name="pointerIcon">textSelection</item>
    <item name="textColor">?colorOnSurface</item>
    <item name="selectionColor">?colorPrimary</item>
    <item name="background">@drawable/textarea_background</item>
  </style>

  <style name="Widget.Button">
    <item name="background">@drawable/button_background</item>
    <item name="gravity">center</item>
    <item name="padding">8dp</item>
    <item name="textColor">?colorOnSurfaceVariant</item>
    <item name="pointerIcon">hand</item>
  </style>

  <style name="Widget.Switch">
    <item name="width">42dp</item>
    <item name="height">26dp</item>
    <item name="background">@drawable/switch_background</item>
  </style>

  <style name="Widget.ImageView">
    <item name="gravity">center</item>
  </style>
</style>