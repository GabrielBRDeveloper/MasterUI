<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
    width="match_parent"
    height="wrap_content"
    paddingBottom="8dp"
    orientation="horizontal"
    padding="10dp"
    background="#AAA"
    gravity="center">

  <LinearLayout
    width="match_parent"
    height="wrap_content"
    layoutGravity="center|top"
    maxWidth="1024dp">

    <Button
      width="match_parent"
      height="wrap_content"
      margin="5dp"/>
    <Button
      width="match_parent"
      height="wrap_content"
      margin="5dp"/>
    <Button
      width="match_parent"
      height="wrap_content"
      margin="5dp"/>
    <SeekBar
      width="match_parent"
      height="wrap_content"
      progress="50"
      max="100"
      margin="5dp"/>

  </LinearLayout>


  <ScrollView
    width="256dp"
    height="match_parent">
    <EditText
        width="match_parent"
        height="wrap_content"
        margin="5dp"/>
  </ScrollView>
</FrameLayout>