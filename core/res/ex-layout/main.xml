<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    width="match_parent"
    height="wrap_content"
    paddingBottom="8dp"
    orientation="horizontal"
    padding="10dp"
    background="#AAA">

  <LinearLayout
      width="match_parent"
      height="wrap_content"
      orientation="vertical"
      padding="10dp"
      background="#555"
      gravity="center">

    <Button
      width="256dp"
      height="32dp"
      margin="5dp"
      text="OK"/>

    <TextView
      width="256dp"
      height="32dp"
      margin="5dp"
      text="OK"/>

    <EditText
      width="256dp"
      height="32dp"
      margin="5dp"
      text="OK"/>

    <Switch
      margin="5dp"
      text="OK"/>

    <ImageView
      width="128dp"
      height="128dp"
      margin="5dp"
      src="@drawable/default_window_icon"
      text="OK"/>

    <CardLayout
      width="256dp"
      height="256dp"
      radius="16dp">

      <View
        width="256dp"
        height="256dp"
        background="#000"/>

    </CardLayout>

  </LinearLayout>

</LinearLayout>